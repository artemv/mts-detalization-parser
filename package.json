{
  "name": "@artemv/mts-detalization-parser",
  "productName": "MtsDetalizationParser",
  "version": "0.0.0-semantic-release",
  "main": "public/electron.js",
  "author": {
    "name": "Artem Vasiliev",
    "email": "artem.job@gmail.com",
    "url": "github.com/artemv"
  },
  "homepage": ".",
  "keywords": [
    "Mts",
    "PDF",
    "parser",
    "React",
    "electron",
    "typescript",
    "Node.js",
    "Javascript"
  ],
  "build": {
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": true
    },
    "files": [
      "build/*",
      "public/*",
      "src/*",
      "main-process/**"
    ],
    "linux": {
      "executableName": "mts-detalization-parser",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "publisherName": "Artem Vasiliev",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "postinstall:electron": "node postinstall",
    "pack": "electron-builder --mwl",
    "build-mainproc": "tsc -p tsconfig-mainproc.json",
    "dist": "electron-builder --mwl",
    "dist:linux": "yarn electron-builder build --linux --x64",
    "dist:windows": "yarn electron-builder build --windows --ia32 --x64",
    "dist:mac": "yarn electron-builder build --mac --x64",
    "react-start": "yarn build-mainproc && react-scripts start",
    "react-build": "yarn build-mainproc && react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --windows --windows --mac --linux --publish=always",
    "build": "yarn react-build && electron-builder --windows --mac --linux",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron . --serve\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "electron-log": "^4.0.3",
    "pdf-parse": "^1.1.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "shards-react": "^1.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "@types/react": "^16.9.2",
    "@types/react-dom": "16.9.2",
    "@types/selenium-webdriver": "^4.0.5",
    "concurrently": "^4.1.2",
    "cross-env": "^6.0.0",
    "electron": "^6.0.10",
    "electron-builder": "^21.2.0",
    "mocha-steps": "^1.3.0",
    "node-sass": "^4.13.1",
    "react-scripts": "^3.1.2",
    "simple-semantic-config": "^6.0.16",
    "typescript": "3.6.3",
    "wait-on": "^3.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
